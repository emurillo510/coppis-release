<div class = "post-edit">
  <% if ["Elton_Murillo","cmconsing","menandro_m"].include? current_user.username  %>
<span class="admin-toggle"><strong>Posts</strong> | <%= link_to "Brands", "admin/brands" %></span>
<br>
<br>
<table class = "admin-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Brand</th>
      <th>Public</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.brand_name %></td>
        <td><%= post.is_public %></td>
        <td><%= link_to 'Show', post, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', post, class: "btn btn-default btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>

      <h1>You are not authorized to view this page.</h1>
<% end %>
</div>